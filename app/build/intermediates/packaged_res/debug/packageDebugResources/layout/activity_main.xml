<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView for displaying a placeholder chart -->
    <ImageView
        android:id="@+id/chartImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
    android:src="@drawable/ic_placeholder_chart"
    android:contentDescription="@string/chart_image_description"
    android:layout_marginBottom="16dp" />

    <!-- Button to add a new transaction -->
    <Button
        android:id="@+id/addTransactionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Transaction" />

    <!-- Button to view transactions -->
    <Button
        android:id="@+id/viewTransactionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View Transactions" />

    <!-- Button to view reports -->
    <Button
        android:id="@+id/reportsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View Reports" />
</LinearLayout>
